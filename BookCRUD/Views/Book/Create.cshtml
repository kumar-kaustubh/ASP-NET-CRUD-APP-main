@model BookAPI.Models.BookAPIDb

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <h1 class="col text-center">Add Book</h1>
</div>

<form method="post" enctype="multipart/form-data">
     <div class="form-group">
          <label asp-for="Title" class="form-label mt-4"></label>
          <input asp-for="Title" class="form-control" aria-describedby="Title" placeholder="Enter title" />
          <span asp-validation-for="Title" class="text-danger"></span>
     </div>
     <div class="form-group">
          <label asp-for="Description"  class="form-label mt-4"></label>
          <textarea asp-for="Description" class="form-control"  rows="3" placeholder="Description"></textarea>
          <span asp-validation-for="Description" class="text-danger"></span>
     </div> 
      
     <div class="form-group">
          <label asp-for="Author"  class="form-label mt-4"></label>
          <input asp-for="Author" class="form-control"  placeholder="Author" />
          <span asp-validation-for="Author" class="text-danger"></span>
     </div> 

    <div class="form-group">
          <label asp-for="Price" class="form-label mt-4"></label>
          <input asp-for="Price" class="form-control" aria-describedby="Price" placeholder="Enter price" />
          <span asp-validation-for="Price" class="text-danger"></span>
     </div>

    <div class="form-group">
          <label  class="form-label mt-4"></label>
          <input  class="form-control" name="file" type="file" />
     </div>
     
     <div class="form-group mt-4">
         <input type="submit" value="Save" class="btn btn-success" />
         <a class="btn btn-dark" asp-controller="Book" asp-action="Index">Back</a>   
     </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}